
@{
    ViewBag.Title = "Manage Saturdays";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table class="table" border="0" cellpadding="0" cellspacing="0" id="tblStud">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Disponibilidade
            </th>
            <th>

            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Data.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.Disponibilidade
            </td>
            <td>
                @Html.ActionLink("Verificar", "gotoSat", "staff", new { Id = item.Id}, null  )
            </td>
        </tr>
    }
</table>

